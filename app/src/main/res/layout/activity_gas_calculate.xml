<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gasCalculate">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/gas_calc_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_calc_heading"
        android:textColor="@color/black"
        android:textSize="@dimen/connection_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/gas_calc_accnoinputx"
        android:layout_width="364dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="57dp"
        android:autofillHints="Account Number"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/gas_calc_accnoinputx"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_calc_heading" />

    <EditText
        android:id="@+id/gas_calc_date"
        android:layout_width="363dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:autofillHints="Date"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/gas_calc_date"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_calc_accnoinputx" />

    <EditText
        android:id="@+id/gas_unit_countinput"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:autofillHints="Unit Count"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/gas_units_count"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_calc_date" />

    <EditText
        android:id="@+id/gas_days_count"
        android:layout_width="361dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:autofillHints="Number of days"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/gas_days_count"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.32"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_unit_countinput" />

    <Button
        android:id="@+id/gas_cal_btn"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#1567F4"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_cal_btn"
        android:textColor="@color/gas_sidebar"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gas_calc_amount_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="28dp"
        android:text="@string/gas_calc_amount_txt"
        android:fontFamily="@font/solway_bold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/gas_calamount_output"
        android:layout_width="183dp"
        android:layout_height="43dp"
        android:layout_marginBottom="7dp"
        android:fontFamily="@font/solway_bold"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toEndOf="@+id/gas_calc_amount_txt" />

    <Button
        android:id="@+id/g_viewEntries_btn"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="160dp"
        android:backgroundTint="#1567F4"
        android:fontFamily="@font/solway_bold"
        android:text="@string/g_viewEntries_btn"
        android:textColor="@color/gas_sidebar"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/gas_cal_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>