<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/pay_topic"
        android:textColor="@color/black"
        android:textSize="@dimen/details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/paymentmethod_back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="230dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/select_btn"
        android:textColor="@color/black"
        android:textSize="@dimen/select_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <Button
        android:id="@+id/to_checkout"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#1567F4"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:drawablePadding="-15dp"
        android:text="@string/to_checkout"
        android:textColor="@color/white"
        android:textSize="@dimen/to_checkout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/paymentmethod_back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="#C8C7C7"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back"
        android:contentDescription="@string/back"/>

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="273dp"
        android:layout_height="202dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paybill" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="278dp"
        android:layout_height="166dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_btn">

        <RadioButton
            android:id="@+id/visa"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="@string/visa"
            android:textSize="@dimen/visa" />

        <RadioButton
            android:id="@+id/express"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="@string/express"
            android:textSize="@dimen/express" />

        <RadioButton
            android:id="@+id/paypal"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:text="@string/paypal"
            android:textSize="@dimen/paypal" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>