<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools= "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/pay_topic"
        android:textColor="@color/connection_txt"
        android:textSize="@dimen/details"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="@dimen/imageView10"
        android:layout_height="181dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details"
        app:srcCompat="@drawable/credit" />

    <TextView
        android:id="@+id/select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/select_btn"
        android:textColor="@color/connection_txt"
        android:textSize="@dimen/select_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView10" />

    <TextView
        android:id="@+id/visa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="@string/visa"
        android:textSize="@dimen/visa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_btn" />

    <TextView
        android:id="@+id/express"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="@string/express"
        android:textSize="@dimen/express"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visa" />

    <TextView
        android:id="@+id/paypal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="@string/paypal"
        android:textSize="@dimen/paypal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/express" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="414dp"
        android:layout_height="105dp"
        android:layout_marginTop="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/paypal"
        app:srcCompat="@drawable/rectangle_blue" />

    <Button
        android:id="@+id/pay_btn_final"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-77dp"
        android:layout_marginEnd="-225dp"
        android:background="@drawable/pay_btn_bg"
        android:drawableRight="@drawable/baseline_keyboard_double_arrow_right_24"
        android:drawablePadding="-15dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="@string/to_checkout"
        android:textColor="@color/to_checkout"
        android:textSize="@dimen/to_checkout"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/price_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-77dp"
        android:layout_marginEnd="-390dp"
        android:fontFamily="@font/chakra_petch_semibold"
        android:text="@string/price"
        android:textColor="@color/price"
        android:textSize="@dimen/price"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintEnd_toStartOf="@+id/details"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>