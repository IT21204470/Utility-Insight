<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_cno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water_background">


    <TextView
        android:id="@+id/w_txt_Meter"
        android:layout_width="298dp"
        android:layout_height="40dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/capriola"
        android:text="@string/txt_Meter"
        android:textColor="#3044B1"
        android:textSize="@dimen/txt_Meter"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/meter_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/entries_btn"
        android:layout_width="241dp"
        android:layout_height="64dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="166dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/number_of_days"
        app:srcCompat="@drawable/water_gradient_button" />

    <RadioButton
        android:id="@+id/w_no_of_units"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="47dp"
        android:checked="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/w_no_of_units"
        android:textSize="@dimen/no_of_units"
        app:layout_constraintBottom_toTopOf="@+id/last_read"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/w_pick_day"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_Meter" />

    <RadioButton
        android:id="@+id/w_pick_day"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="14dp"
        android:checked="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/read"
        android:textSize="@dimen/read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_Meter" />

    <EditText
        android:id="@+id/current_read"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/water_baseline_water_drop_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/current_date"
        android:inputType="date"
        android:text="@string/current_read_date"
        android:textAlignment="viewStart"
        android:textColor="@color/current_read_date"
        android:textSize="@dimen/current_read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_read" />

    <EditText
        android:id="@+id/number_of_days"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="#D8D3D3"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/days"
        android:inputType="date"
        android:text="@string/number_of_units"
        android:textAlignment="center"
        android:textColor="@color/number_of_units"
        android:textSize="@dimen/number_of_units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_read" />

    <EditText
        android:id="@+id/last_read"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="41dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/water_baseline_water_drop_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/last_read"
        android:inputType="date"
        android:text="@string/previous_meter_read"
        android:textAlignment="viewStart"
        android:textColor="@color/previous_meter_read"
        android:textSize="@dimen/last_read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_pick_day" />

    <TextView
        android:id="@+id/txt_calculate1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-210dp"
        android:layout_marginTop="-47dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_calculate1"
        android:textColor="@color/txt_calculate1"
        android:textSize="@dimen/txt_calculate1"
        app:layout_constraintStart_toEndOf="@+id/entries_btn"
        app:layout_constraintTop_toBottomOf="@+id/entries_btn" />

    <ImageView
        android:id="@+id/cal_arrow"
        android:layout_width="@dimen/cal_arrow"
        android:layout_height="41dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-54dp"
        app:layout_constraintStart_toEndOf="@+id/txt_calculate1"
        app:layout_constraintTop_toBottomOf="@+id/entries_btn"
        app:srcCompat="@drawable/baseline_keyboard_arrow_right_24" />

    <ImageView
        android:id="@+id/meter_menu"
        android:layout_width="53dp"
        android:layout_height="45dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />


</androidx.constraintlayout.widget.ConstraintLayout>




