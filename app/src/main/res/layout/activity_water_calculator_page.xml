<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_cno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/water_background">


    <TextView
        android:id="@+id/txt_Meter"
        android:layout_width="286dp"
        android:layout_height="34dp"
        android:fontFamily="@font/capriola"
        android:text="@string/txt_Cal"
        android:textColor="@color/txt_Meter"
        android:textSize="@dimen/w_txt_Meter"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="7dp" />

    <ImageView
        android:id="@+id/entries_btn"
        android:layout_width="253dp"
        android:layout_height="65dp"
        android:layout_marginStart="140dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/water_gradient_button" />

    <TextView
        android:id="@+id/txt_calculate2"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_marginStart="-220dp"
        android:layout_marginTop="-57dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_read"
        android:textColor="@color/txt_read"
        android:textSize="@dimen/txt_calculate"
        app:layout_constraintStart_toEndOf="@+id/entries_btn"
        app:layout_constraintTop_toBottomOf="@+id/entries_btn" />

    <RadioButton
        android:id="@+id/w_no_of_units"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_marginStart="36dp"

        android:layout_marginTop="36dp"
        android:layout_marginEnd="62dp"
        android:checked="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/w_no_of_days"
        android:textSize="@dimen/w_no_of_units"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/read"
        app:layout_constraintTop_toBottomOf="@+id/txt_Meter"
        tools:ignore="MissingConstraints" />

    <RadioButton
        android:id="@+id/read"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="50dp"
        android:checked="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/pick_day"
        android:textSize="@dimen/w_pick_day"
        app:layout_constraintBottom_toTopOf="@+id/previous_meter_read"
        app:layout_constraintEnd_toStartOf="@+id/w_no_of_units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Meter"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/current_read_date"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/water_baseline_calendar_month_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/current_date"
        android:inputType="date"
        android:text="@string/current_read"
        android:textAlignment="viewStart"
        android:textColor="@color/current_read"
        android:textSize="@dimen/current_read"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="235dp" />

    <EditText
        android:id="@+id/number_of_units"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="#D8D3D3"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/days"
        android:inputType="date"

        android:text="@string/w_days"
        android:textAlignment="center"
        android:textColor="@color/number_of_days"
        android:textColorHint="#757171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_read_date" />

    <EditText
        android:id="@+id/previous_meter_read"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/water_baseline_calendar_month_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/last_read"
        android:inputType="date"
        android:text="@string/last_read"
        android:textAlignment="viewStart"
        android:textColor="@color/last_read"
        android:textSize="@dimen/last_read"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_no_of_units" />

    <TextView
        android:id="@+id/txt_calculate"
        android:layout_width="198dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="517dp"
        android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_read"
        android:textColor="@color/txt_read"
        android:textSize="@dimen/txt_calculate"
        app:layout_constraintStart_toEndOf="@+id/entries_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cal_menu"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />


</androidx.constraintlayout.widget.ConstraintLayout>




