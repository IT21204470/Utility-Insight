<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_cno"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/txt_payments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="@string/payment_topic"
        android:textColor="@color/txt_payments"
        android:textSize="@dimen/txt_payments"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/txt_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_account"
        android:textColor="@color/txt_account"
        android:textSize="@dimen/txt_account"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/no_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="@string/no_account"
        android:textColor="@color/no_account"
        android:textSize="@dimen/no_account"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="178dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="@dimen/spinner"
        android:layout_height="wrap_content"
        android:contextClickable="false"
        android:entries="@array/accounts"
        tools:layout_editor_absoluteX="12dp"
        tools:layout_editor_absoluteY="120dp" />

    <Button
        android:id="@+id/add_account"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/solway_bold"
        android:text="@string/add_account"
        android:textColor="@color/white"
        android:textSize="@dimen/add_account"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="160dp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/amount"
        android:inputType="textPersonName"
        android:textSize="@dimen/amount"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="281dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/email"
        android:inputType="textPersonName"
        android:textSize="@dimen/email"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="387dp" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_email"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_email"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="353dp" />

    <TextView
        android:id="@+id/txt_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_amount"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_amount"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="248dp" />

    <Button
        android:id="@+id/proceed"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:background="@drawable/gradient_button"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:fontFamily="@font/solway_bold"
        android:padding="8dp"
        android:text="@string/proceed"
        android:textColor="@color/white"
        android:textSize="@dimen/proceed"
        tools:layout_editor_absoluteX="213dp"
        tools:layout_editor_absoluteY="542dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
