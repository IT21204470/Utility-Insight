<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/txt_cno"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


    <TextView
        android:id="@+id/w_txt_tip4"
        android:layout_width="355dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="@string/txt_tip4"
        android:textColor="#757373"
        android:textSize="@dimen/txt_tip4"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip4" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="54dp"
        android:layout_height="51dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_tip1"
        app:srcCompat="@drawable/solar" />

    <TextView
        android:id="@+id/tip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/tip4"
        android:textColor="#000000"
        android:textSize="@dimen/tip4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_tip1" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip2"
        app:srcCompat="@drawable/bulb" />

    <TextView
        android:id="@+id/txt_tip2"
        android:layout_width="355dp"
        android:layout_height="85dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="@string/txt_tip1"
        android:textColor="#757373"
        android:textSize="@dimen/txt_tip2"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip1" />

    <TextView
        android:id="@+id/tip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/tip2"
        android:textColor="#000000"
        android:textSize="@dimen/tip2"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip2" />

    <TextView
        android:id="@+id/tips_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/tips_title"
        android:textColor="@color/black"
        android:textSize="@dimen/connection_txt"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/tip1"
        android:textColor="@color/tip1"
        android:textSize="@dimen/tip1"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/tips_title" />

    <TextView
        android:id="@+id/w_txt_tip1"
        android:layout_width="355dp"
        android:layout_height="87dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:text="@string/txt_tip2"
        android:textAlignment="viewStart"
        android:textColor="#757373"
        android:textSize="@dimen/txt_tip1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/imageView5"
        android:layout_height="55dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tips_title"
        app:srcCompat="@drawable/disconnect" />

</androidx.constraintlayout.widget.ConstraintLayout>
