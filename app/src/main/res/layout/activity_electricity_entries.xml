<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".electricityEntries">

    <TextView
        android:id="@+id/entry_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/exo_2"
        android:text="@string/entry_h1"
        android:textColor="@color/black"
        android:textSize="@dimen/connection_txt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toStartOf="@+id/entry_h1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:backgroundTint="#FFFFFF"
        android:layout_width="360dp"
        android:layout_height="200dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="26dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/card_d1"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:fontFamily="@font/capriola"
                android:gravity="center_vertical"
                android:text="@string/card_d1"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card_d2"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:fontFamily="@font/capriola"
                android:gravity="center_vertical"
                android:text="@string/card_d2"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card_d3"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:paddingLeft="15dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/capriola"
                android:text="@string/card_d3"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/card_d4"
                android:layout_width="360dp"
                android:layout_height="50dp"
                android:fontFamily="@font/capriola"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/card_d4"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/delete1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="208dp"
        android:backgroundTint="#F4685E"
        android:text="@string/delete1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:id="@+id/update1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#45A6F3"
        android:text="@string/update1"
        app:layout_constraintEnd_toStartOf="@+id/delete1"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>