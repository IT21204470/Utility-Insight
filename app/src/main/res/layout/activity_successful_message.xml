<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="330dp"
        android:layout_height="260dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rectangle_view" />

    <ImageView
        android:id="@+id/gas_tips_imageView2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:srcCompat="@drawable/rectangle_green" />

    <TextView
        android:id="@+id/success_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/capriola"
        android:text="@string/success_msg"
        android:textColor="#5DC835"
        android:textSize="@dimen/success_msg"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/gas_tips_imageView2" />

    <Button
        android:id="@+id/previous"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/extra_button"
        android:fontFamily="@font/solway_bold"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/previous"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <Button
        android:id="@+id/close"
        android:layout_width="148dp"
        android:layout_height="50dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/extra_button"
        android:text="@string/done"
        android:textColor="@color/white"
        android:textSize="@dimen/done"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/imageView7"
        android:layout_height="85dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/gas_tips_imageView2"
        app:layout_constraintEnd_toEndOf="@+id/gas_tips_imageView2"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/gas_tips_imageView2"
        app:srcCompat="@drawable/success" />

    <TextView
        android:id="@+id/unsuccessful_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="@string/successful_msg"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/success_msg"
        app:layout_constraintStart_toStartOf="@+id/success_msg"
        app:layout_constraintTop_toBottomOf="@+id/success_msg" />
</androidx.constraintlayout.widget.ConstraintLayout>