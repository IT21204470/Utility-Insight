<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/gas_notify_txt"
        android:layout_width="144dp"
        android:layout_height="30dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/capriola"
        android:text="@string/gas_notifications_icon"
        android:textColor="@color/white"
        android:textSize="@dimen/notify"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toEndOf="@+id/gas_tips_txt"
        app:layout_constraintTop_toBottomOf="@+id/gas_notify_imageView3" />

    <TextView
        android:id="@+id/gas_tips_txt"
        android:layout_width="107dp"
        android:layout_height="29dp"
        android:layout_marginTop="20dp"
        android:background=""
        android:fontFamily="@font/capriola"
        android:text="@string/gas_show_tips_txt"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tips_imageView2" />

    <ImageView
        android:id="@+id/gas_cylynder_img"
        android:layout_width="@dimen/imageView4"
        android:layout_height="62dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toTopOf="@+id/gas_notify_imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/gas_sub_topic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/gas" />

    <TextView
        android:id="@+id/gas_sub_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/capriola"
        android:text="@string/gas_home_sub_topic"
        android:textSize="@dimen/sub_topic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/gas_tips_imageView2"
        android:layout_width="136dp"
        android:layout_height="75dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toStartOf="@+id/gas_notify_imageView3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_sub_topic"
        app:srcCompat="@drawable/advice" />

    <ImageView
        android:id="@+id/gas_notify_imageView3"
        android:layout_width="@dimen/imageView3"
        android:layout_height="81dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gas_tips_imageView2"
        app:layout_constraintTop_toBottomOf="@+id/gas_sub_topic"
        app:srcCompat="@drawable/notifications" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="53dp"
        android:layout_height="38dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toStartOf="@+id/gas_home_topic"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <TextView
        android:id="@+id/gas_home_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="156dp"
        android:fontFamily="@font/capriola"
        android:text="@string/gas_home_topic"
        android:textColor="#6ECC11"
        android:textSize="@dimen/topic"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toStartOf="@+id/gas_cylynder_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/gas_pay_btn"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="255dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gas_pay_btn"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_pay_btn_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gas_calusage_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tips_txt" />

    <Button
        android:id="@+id/gas_calusage_btn"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/gas_cal_usage_btn"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_cal_usage_btn_txt"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gas_pay_btn"
        app:layout_constraintTop_toBottomOf="@+id/gas_notify_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>