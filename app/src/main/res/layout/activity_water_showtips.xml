<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txt_cno"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/edittext_background"
    android:backgroundTint="#FFFFFF">

    <TextView
        android:id="@+id/w_txt_tip4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/w_txt_tip4"
        android:textColor="@color/txt_tip4"
        android:textSize="@dimen/w_txt_tip4"
        app:layout_constraintStart_toEndOf="@+id/tpi_img3"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip3dec3" />

    <TextView
        android:id="@+id/txt_tip4dec4"
        android:layout_width="341dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:text="@string/txt_tip4dec4"
        android:textColor="@color/txt_tip4dec4"
        android:textSize="@dimen/txt_tip4dec4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/w_txt_tip4" />

    <TextView
        android:id="@+id/txt_tip3dec3"
        android:layout_width="353dp"
        android:layout_height="89dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="15dp"
        android:text="@string/txt_tip3dec3"
        android:textColor="@color/txt_tip3dec3"
        android:textSize="@dimen/txt_tip3dec3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_img2" />

    <TextView
        android:id="@+id/w_txt_tip3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/w_txt_tip3"
        android:textColor="@color/txt_tip3"
        android:textSize="@dimen/w_txt_tip3"
        app:layout_constraintStart_toEndOf="@+id/tip_img2"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip1dec" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/capriola"
        android:text="@string/txt_title"
        android:textColor="@color/txt_title"
        android:textSize="@dimen/txt_title"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tip_menu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/w_txt_tip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/w_txt_tip1"
        android:textColor="@color/txt_tip1"
        android:textSize="@dimen/w_txt_tip1"
        app:layout_constraintStart_toEndOf="@+id/tip_img1"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <TextView
        android:id="@+id/txt_tip1dec"
        android:layout_width="356dp"
        android:layout_height="78dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="14dp"
        android:text="@string/txt_tip1des"
        android:textColor="@color/txt_tip1des"
        android:textSize="@dimen/txt_tip1des"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_img1" />

    <ImageView
        android:id="@+id/tip_img1"
        android:layout_width="@dimen/tip_img1"
        android:layout_height="39dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tip_menu"
        app:srcCompat="@drawable/water_tips_home" />

    <ImageView
        android:id="@+id/tip_img2"
        android:layout_width="@dimen/tip_img2"
        android:layout_height="38dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip1dec"
        app:srcCompat="@drawable/washing_machine" />

    <ImageView
        android:id="@+id/tpi_img3"
        android:layout_width="@dimen/tpi_img3"
        android:layout_height="41dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_tip3dec3"
        app:srcCompat="@drawable/water_pipe" />

    <ImageView
        android:id="@+id/tip_menu"
        android:layout_width="@dimen/tip_menu"
        android:layout_height="41dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

    <ImageView
        android:id="@+id/tip_btn"
        android:layout_width="@dimen/tip_btn"
        android:layout_height="56dp"
        android:layout_marginStart="117dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/water_gradient_button" />

    <TextView
        android:id="@+id/txt_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-142dp"
        android:layout_marginTop="-41dp"
        android:drawableRight="@drawable/baseline_arrow_downward_24"
        android:drawablePadding="1dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/txt_tip"
        android:textColor="@color/txt_tip"
        android:textSize="@dimen/txt_tip"
        app:layout_constraintStart_toEndOf="@+id/tip_btn"
        app:layout_constraintTop_toBottomOf="@+id/tip_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>