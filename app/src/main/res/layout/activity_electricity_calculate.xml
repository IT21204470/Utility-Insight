<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/electricity">

    <TextView
        android:id="@+id/heading1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/capriola"
        android:text="@string/heading1"
        android:textColor="@color/heading1"
        android:textSize="@dimen/heading1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/calculate_btn"
        android:layout_width="246dp"
        android:layout_height="60dp"
        android:layout_marginStart="149dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/gradient_button"
        android:drawableRight="@drawable/baseline_navigate_next_24"
        android:fontFamily="@font/solway_bold"
        android:padding="8dp"
        android:text="@string/move_next"
        android:textColor="@color/white"
        android:textSize="@dimen/calculate_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/units" />

    <EditText
        android:id="@+id/current_reading"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/current_date"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:textAlignment="viewStart"
        android:textSize="@dimen/current_reading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/previous_reading" />

    <EditText
        android:id="@+id/units"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_background"
        android:backgroundTint="#D8D3D3"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/days"
        android:inputType="date"
        android:paddingLeft="-40dp"
        android:textAlignment="center"
        android:textSize="@dimen/units"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_reading" />

    <EditText
        android:id="@+id/previous_reading"
        android:layout_width="270dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/edittext_background"
        android:drawableLeft="@drawable/baseline_calendar_month_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/last_date"
        android:inputType="date"
        android:paddingLeft="15dp"
        android:textAlignment="viewStart"
        android:textSize="@dimen/previous_reading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/no_of_units" />

    <RadioButton
        android:id="@+id/no_of_units"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="47dp"
        android:checked="false"
        android:fontFamily="sans-serif-light"
        android:text="@string/no_of_days"
        android:textSize="@dimen/no_of_units"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading1" />

    <RadioButton
        android:id="@+id/readings"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:checked="true"
        android:fontFamily="sans-serif-light"
        android:text="@string/pick_days"
        android:textSize="@dimen/readings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heading1" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="17dp"
        app:layout_constraintEnd_toStartOf="@+id/heading1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu" />

</androidx.constraintlayout.widget.ConstraintLayout>