<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/acc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/acc_name"
        android:inputType="textPersonName"
        android:textSize="@dimen/acc_name"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/decline_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/solway_bold"
        android:text="@string/decline_btn"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="142dp"
        tools:layout_editor_absoluteY="407dp" />

    <Button
        android:id="@+id/save_btn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/purple_700"
        android:fontFamily="@font/solway_bold"
        android:text="@string/save_btn"
        android:textColor="@color/save_btn"
        android:textSize="@dimen/save_btn"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="407dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:contextClickable="false"
        android:entries="@array/services"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="120dp" />

    <TextView
        android:id="@+id/service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/solway_bold"
        android:text="@string/string"
        android:textColor="@color/service"
        android:textSize="@dimen/string"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="86dp" />

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/menu"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/connection_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/capriola"
        android:text="@string/connection_txt"
        android:textColor="@color/connection_txt"
        android:textSize="@dimen/connection_txt"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/acc_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/acc_no"
        android:inputType="textPersonName"
        android:textSize="@dimen/acc_no"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="243dp" />

    <EditText
        android:id="@+id/premisesID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/solway_bold"
        android:hint="@string/premisesID"
        android:inputType="textPersonName"
        android:textSize="@dimen/premisesID"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="315dp" />
</androidx.constraintlayout.widget.ConstraintLayout>