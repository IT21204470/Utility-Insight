<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gasTips">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="58dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gasmenu" />

    <TextView
        android:id="@+id/gas_tips_heading"
        android:layout_width="225dp"
        android:layout_height="45dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_tips_heading"
        android:textSize="@dimen/gas_tips_headingsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/gas_tip1_img"
        android:layout_width="73dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="45dp"
        android:contentDescription="@string/line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:srcCompat="@drawable/gasline" />

    <TextView
        android:id="@+id/gas_tip1_heading"
        android:layout_width="271dp"
        android:layout_height="39dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_tip1_heading"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tips_heading" />

    <TextView
        android:id="@+id/gas_tip1"
        android:layout_width="358dp"
        android:layout_height="52dp"
        android:layout_marginTop="28dp"
        android:text="@string/gas_tip1des"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.301"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip1_heading" />

    <ImageView
        android:id="@+id/gas_tip_img2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip1"
        app:srcCompat="@drawable/boiling"
        android:contentDescription="@string/boil" />

    <TextView
        android:id="@+id/gas_tip2_heading"
        android:layout_width="359dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:text="@string/gas_tip2_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip_img2" />

    <TextView
        android:id="@+id/gas_tip2x"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_marginTop="33dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_tip2x"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toEndOf="@+id/gas_tip_img2"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip1" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="72dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip2_heading"
        app:srcCompat="@drawable/green"
        android:contentDescription="@string/greeting" />

    <TextView
        android:id="@+id/gas_tip3_heading"
        android:layout_width="268dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/solway_bold"
        android:text="@string/gas_tip3_heading"
        android:textSize="@dimen/gas_tip3_heading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip2_heading" />

    <TextView
        android:id="@+id/gas_tip3"
        android:layout_width="355dp"
        android:layout_height="45dp"
        android:layout_marginTop="23dp"
        android:text="@string/gas_tip3x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gas_tip3_heading" />

</androidx.constraintlayout.widget.ConstraintLayout>