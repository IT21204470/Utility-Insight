<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gupdate_accno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gupdate_accno"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_gas_accno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="Account no"/>

    <TextView
        android:id="@+id/gupdate_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gupdate_date"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_gas_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/gupdate_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gupdate_units"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_gas_units"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/update_gas_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"/>

</LinearLayout>
